//Запросы от клиента серверу
//Рукопожатие(знакомство сервера с клиентом)
//Запрос
{
	"action" : "handshake",
	"code" : 0,
	"content" : {
		"name" : "Здесь имя игрока",
		"secretkey" : "Здесь передаётся ключ, который был получен вами с сервера"
	}
}
//Ответ
{
	"action" : "handshake",
	"code" : 0, //Нулевой код указывает на успешность операции,
				//если же возвращается другое значение, то операция выполнена с ошибкой
	"content" : {
		"servername" : "Имя сервера",
		"gameid" : "Здесь индетификатор игры на сервере",
		"message" : "Пояснение результатов выполнения операции"
	}
}
//Обмен сообщениями
//Запрос
{
	"action" : "post",
	"code" : 0,
	"content" : "Текст сообщения"
}



//Запросы от сервера клиенту
//Старт игры
//Запрос
{
	"action" : "startgame",
	"code" : 0,
	"content" : {
		"enemyname" : "Имя вашего соперника"
		//Поле игры задаётся массивом, в данном примере выдаётся массив размером 4x4
		"gamearea" : [
			[0, 0, 0, 0],
			[1, 1, 1, 1],
			[1, 2, 2, 0],
			[0, 0, 0, 0]
		],
		"empty" : 0,
		"road" : 1, 
		"stone" : 2,
		"towers" : [100, 101, 102],
		"soldiers" : [201, 202, 203]
	}
}
//Ответ
{
	"action" : "startgame",
	"code" : 0,
	"content" : {
		"ready" : true
	}
}
//Запрос на обновления игровых данных
{
	"action" : "refresh"
	"code" : 0,
	"content" : {
		/* Обновление карты происходит перечислением изменившихся данных. 
		 * В примере ниже мы информируем клиента о том, что в 0 строке следует изменить значения
		 * 0 столбца на 1, 1 столбца на 2 и 3 столбца на 1
		 */
		"gamearea" : {
			"0" : {
				"0" : 1,
				"1" : 2,
				"3" : 1
			}
		}
	}
}